#ifndef PURE_PURSUIT_LOCAL_PLANNER_JOIN_COSTMAP_H_
#define PURE_PURSUUIT_LOCAL_PLANNER_JOIN_COSTMAP_H_

#include <vector>
#include <costmap_2d/costmap_2d_ros.h>
#include <tf2_ros/buffer.h>

namespace pure_pursuit_local_planner {

class JoinCostmap
{
public:
  JoinCostmap() {}

  // 스텁: 아무것도 안 함
  inline void initialize(costmap_2d::Costmap2DROS* /*local_costmap_ros*/,
                         costmap_2d::Costmap2DROS* /*global_costmap_ros*/,
                         tf2_ros::Buffer* /*tf2_buffer*/) {}

  // 스텁: 아무것도 안 함
  inline void joinMaps() {}
};

} // namespace pure_pursuit_local_planner
#endif
