<launch>
  <param name="use_sim_time" value="true" />

  <!-- Load robot model -->
  <param name="robot_description" command="$(find xacro)/xacro $(find gazebo_sim_pkg)/urdf/my_robot.urdf.xacro" />

  <!-- Load control config -->
  <rosparam file="$(find gazebo_sim_pkg)/config/my_robot_control.yaml" command="load"/>

  <!-- Launch Gazebo with the specified world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find gazebo_sim_pkg)/worlds/embd.world"/>
    <arg name="gui" value="true"/> 
  </include>

  <!-- Spawn robot in Gazebo -->
  <node name="spawn_my_robot" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-param robot_description -urdf -model my_robot -z 0.07" />

  <!-- Spawner for joint controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/my_robot" args="joint_state_controller left_wheel_controller right_wheel_controller"/>

  <!-- Publishes TF and robot state -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/my_robot/joint_states" />
  </node>

  <!-- Publishes joint states for passive joints like front_caster -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <remap from="/joint_states" to="/my_robot/joint_states" />
  </node>
  
</launch>
